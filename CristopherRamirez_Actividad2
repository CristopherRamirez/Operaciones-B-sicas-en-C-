#include <iostream>
int main() {
    float Num1, Num2;
    
   std:: cout << "Ingrese el primer número" ;
   std:: cin >> Num1;

   std:: cout << "Ingrese el segundo número" ;
   std:: cin >> Num2;

    float suma = Num1 + Num2;
    float resta = Num1 - Num2;
    float multiplicacion = Num1 * Num2;
    float division = Num1 / Num2;

   std:: cout << "El resultado de suma es: " << suma << std::endl;
   std:: cout << "El resultado de la resa es: " << resta << std:: endl; 
   std:: cout << "El resultado de la multiplicación es: " << multiplicacion << std:: endl;
   std:: cout << "El resultado de la división es: " << division << std::endl;

    return 0;
}
